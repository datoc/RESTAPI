html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		title REST&nbsp;API
		link(rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css")
	body
		div.container
			form(method="POST" action="/create")
				div.form-group
					label(for="name") Name
					input.form-control(type="text" placeholder="Name" name="name")
				div.form-group
					label(for="name") Last name
					input.form-control(type="text" placeholder="Last name" name="lastname")
				div.form-group
					label(for="name") Email
					input.form-control(type="email" placeholder="Email" name="email")
				div.form-group
					label(for="name") Password
					input.form-control(type="password" placeholder="Password" name="password")
				div.form-group
					input.btn.btn-outline-primary(type="submit" name="insert" value="Create")
